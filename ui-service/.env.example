# Example environment variables for ui-service
# Copy this file to .env.local and fill in the actual values.

# Environment (development, production)
NODE_ENV=development

# Service port
PORT=3000

# Base URL for API services (adjust if your gateway runs elsewhere)
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# URLs for backend services (adjust if they run on different ports/hosts)
ANALYSIS_ENGINE_URL=http://localhost:8002
FEATURE_STORE_URL=http://localhost:8001
TRADING_GATEWAY_URL=http://localhost:8004

# Secret for signing authentication tokens (replace with a strong, unique secret)
AUTH_SECRET=replace_with_strong_random_secret

# Session timeout in minutes
SESSION_TIMEOUT_MIN=60

# Enable usage analytics (true/false)
ENABLE_ANALYTICS=false
