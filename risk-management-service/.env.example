# Database Configuration
# Note: The service uses common_lib.database which expects these standard DB_ prefixes
DB_USER=your_db_user_here
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=risk_management_db
DB_POOL_SIZE=10
DB_SSL_REQUIRED=false

# API Security
API_KEY=your_api_key_here
# JWT token secret for auth validation if using JWT authentication
JWT_SECRET=your_jwt_secret_here
# Service specific keys for integrations with other services
TRADING_GATEWAY_API_KEY=your_trading_gateway_key_here
PORTFOLIO_SERVICE_API_KEY=your_portfolio_service_key_here

# Service Configuration
PORT=8004
SERVICE_NAME=risk-management-service  # Used in logging and service identification
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR, or CRITICAL
DEBUG_MODE=false                      # Set to true for development

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=risk-management-consumer
KAFKA_RISK_EVENTS_TOPIC=risk-events
KAFKA_POSITION_EVENTS_TOPIC=position-events
KAFKA_MARKET_EVENTS_TOPIC=market-events
