# Application settings
APP_HOST=0.0.0.0
APP_PORT=8002
DEBUG=False

# Security settings
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
# SSL_KEYFILE=/path/to/ssl/key.pem
# SSL_CERTFILE=/path/to/ssl/cert.pem

# CORS settings
ALLOWED_ORIGINS=*
# For multiple origins, use comma-separated values:
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database settings
DATABASE_URL=sqlite:///./backtesting.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis settings
# REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-redis-password

# Logging configuration
LOG_LEVEL=INFO
# LOG_FILE=/path/to/backtesting.log

# Service integration URLs
# DATA_MANAGEMENT_SERVICE_URL=http://localhost:8001
# MARKET_ANALYSIS_SERVICE_URL=http://localhost:8003
# ANALYSIS_ENGINE_SERVICE_URL=http://localhost:8004

# Backtesting specific settings
MAX_BACKTEST_DURATION=7200  # 2 hours in seconds
MAX_CONCURRENT_BACKTESTS=5
