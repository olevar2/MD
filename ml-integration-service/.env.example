# ML Integration Service Environment Variables

# Service Configuration
SERVICE_NAME=ml-integration-service
APP_VERSION=0.1.0
DEBUG_MODE=False
LOG_LEVEL=INFO

# Service Connections
# Analysis Engine Service
ANALYSIS_ENGINE_API_URL=http://analysis-engine-service:8000/api/v1
ANALYSIS_ENGINE_API_KEY=your_analysis_engine_api_key_here

# ML Workbench Service
ML_WORKBENCH_API_URL=http://ml_workbench-service:8000/api/v1
ML_WORKBENCH_API_KEY=your_ml_workbench_api_key_here

# Strategy Execution Engine
STRATEGY_EXECUTION_API_URL=http://strategy-execution-engine:8000/api/v1
STRATEGY_EXECUTION_API_KEY=your_strategy_execution_api_key_here

# Feature Extraction Configuration
DEFAULT_CACHE_EXPIRY_SECONDS=300
MAX_FEATURE_BATCH_SIZE=1000

# Security
API_KEY=your_service_api_key_here
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Redis Cache Settings (if used)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=your_redis_password_here
# REDIS_URL will be constructed from above settings if not provided
# REDIS_URL=redis://:your_redis_password_here@localhost:6379/1
