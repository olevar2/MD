# Trading Gateway Service Environment Variables

# Service Configuration
LOG_LEVEL=info
PORT=8004
NODE_ENV=development

# Security
API_KEY=your_api_key_here
JWT_SECRET=your_jwt_secret_here

# Service API Keys
ANALYSIS_ENGINE_API_KEY=your_analysis_engine_api_key_here
PORTFOLIO_API_KEY=your_portfolio_api_key_here
FEATURE_STORE_API_KEY=your_feature_store_api_key_here
RISK_MANAGEMENT_API_KEY=your_risk_management_api_key_here

# Broker Configurations
DEFAULT_BROKER=broker1
# Format: JSON string with broker credentials
# Example: {"broker1":{"key":"xxx","secret":"yyy"},"broker2":{"key":"aaa","secret":"bbb"}}
BROKER_API_KEYS={"broker1":{"key":"your_broker1_key_here","secret":"your_broker1_secret_here"},"broker2":{"key":"your_broker2_key_here","secret":"your_broker2_secret_here"}}

# Performance Settings
ORDER_TIMEOUT_MS=5000
RETRY_ATTEMPTS=3

# Cache Settings
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Service URLs
RISK_MANAGEMENT_URL=http://risk-management-service:8000
PORTFOLIO_MANAGEMENT_URL=http://portfolio-management-service:8000
ANALYSIS_ENGINE_URL=http://analysis-engine-service:8002
MONITORING_SERVICE_URL=http://monitoring-alerting-service:8005
