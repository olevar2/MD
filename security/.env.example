# Example environment variables for security-service
# Copy this file to .env and fill in the actual values.

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API service port
PORT=8008

# Secret for JWT token signing (replace with a strong, unique secret)
JWT_SECRET=replace_with_strong_random_secret

# JWT token expiration in minutes
JWT_EXPIRATION_MINUTES=60

# Salt for API key hashing (replace with a strong, unique salt)
API_KEY_SALT=replace_with_strong_random_salt

# Redis connection string for session storage
REDIS_URL=redis://localhost:6379

# External auth provider URL (if any)
# AUTH_PROVIDER_URL=

# Enable multi-factor authentication (true/false)
MFA_ENABLED=true

# Path for storing audit logs
AUDIT_LOG_PATH=./logs/audit

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_TIME_MINUTES=15
