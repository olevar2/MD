# Portfolio Management Service Environment Variables

# Service Configuration
SERVICE_NAME=portfolio-management-service
APP_VERSION=0.1.0
LOG_LEVEL=INFO
PORT=8006
DEBUG_MODE=False

# Database Settings
DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/portfolio
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio
DB_POOL_SIZE=20
DB_SSL_REQUIRED=False

# Redis Cache Settings
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
CACHE_TTL_SECONDS=300

# Service URLs
TRADING_GATEWAY_URL=http://trading-gateway-service:8004
RISK_MANAGEMENT_URL=http://risk-management-service:8007
ANALYSIS_ENGINE_URL=http://analysis-engine-service:8002
MONITORING_SERVICE_URL=http://monitoring-alerting-service:8005

# Security
API_KEY=your_api_key_here
SERVICE_API_KEY=your_service_api_key_here
TRADING_GATEWAY_API_KEY=your_trading_gateway_api_key_here
RISK_MANAGEMENT_API_KEY=your_risk_management_api_key_here

# Portfolio Settings
MAX_POSITIONS_PER_PORTFOLIO=100
DEFAULT_BASE_CURRENCY=USD
MAX_LEVERAGE=10
MARGIN_REQUIREMENT_PERCENT=5.0

# Performance Calculation Settings
PERFORMANCE_METRICS_WINDOW_DAYS=30
RISK_CALCULATION_WINDOW_DAYS=90
VOLATILITY_CALCULATION_METHOD=standard_deviation

# Kafka Settings (if used)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=portfolio-management
KAFKA_POSITION_UPDATES_TOPIC=position-updates
KAFKA_PORTFOLIO_EVENTS_TOPIC=portfolio-events
