# Example environment variables for ml_workbench-service
# Copy this file to .env and fill in the actual values.

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Service port
PORT=8005

# URL to the Feature Store Service
FEATURE_STORE_URL=http://localhost:8001

# Path to model registry storage (can be a local path or cloud storage URI)
MODEL_REGISTRY_PATH=./model_registry

# MLflow tracking URI (if using MLflow)
# EXPERIMENT_TRACKING_URI=http://localhost:5000

# API key for securing service-to-service communication (replace with a strong key)
API_KEY=replace_with_secure_api_key

# Maximum memory allocation for training jobs (in GB)
MAX_TRAINING_MEMORY=16

# GPU devices to use (comma-separated list, e.g., 0,1 or leave empty for CPU)
# CUDA_VISIBLE_DEVICES=0
